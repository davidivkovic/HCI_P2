<Primitives:Component xmlns:Primitives="clr-namespace:P2.Primitives" x:Class="P2.Views.EditStopDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:P2.Views"
             mc:Ignorable="d" 
             FontSize="28"
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
  <StackPanel Margin="50 0 0 0">
    <TextBlock FontWeight="Medium" TextWrapping="Wrap" 
               FontSize="28" Margin="0 0 0 0">
      Cena za stanicu <Run Text="{Binding StopName}"/>:
    </TextBlock>
    <WrapPanel VerticalAlignment="Center">
      <TextBox Padding="10 0" VerticalContentAlignment="Center" 
               Text="{Binding Price}" Height="50"  Width="360"
               Margin="0 10 10 0">
      </TextBox>
      <TextBlock Margin="0 15 0 0">RSD</TextBlock>
    </WrapPanel>

  </StackPanel>
</Primitives:Component>
